{
  "manifest_version": 3,
  "name": "LinkMind - Next-Gen Knowledge Capture",
  "version": "1.0.0",
  "description": "Premium security-first knowledge management extension with intelligent capture, organization, and collaboration features.",
  
  "permissions": [
    "storage",
    "activeTab", 
    "scripting",
    "contextMenus",
    "sidePanel",
    "tabs",
    "bookmarks"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "LinkMind - Capture Knowledge",
    "default_icon": "assets/icons/icon.svg"
  },
  
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  
  "chrome_url_overrides": {
    "newtab": "src/dashboard/dashboard.html"
  },
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open LinkMind popup"
    },
    "toggle_sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+S", 
        "mac": "Command+Shift+S"
      },
      "description": "Toggle LinkMind side panel"
    },
    "quick_capture": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Quick capture current page"
    }
  },
  
  "icons": {
    "128": "assets/icons/icon.svg"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/injected-script.js",
        "assets/icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}